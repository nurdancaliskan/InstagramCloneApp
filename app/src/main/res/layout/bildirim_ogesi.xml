<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="8dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profil_resmi_bildirim_ogesi"
        android:layout_width="50dp"
        android:layout_height="50dp"
        tools:src="@mipmap/ic_launcher" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginRight="5dp"
        android:layout_toStartOf="@id/gonderi_resmi_bildirimOgesi"
        android:layout_toEndOf="@id/profil_resmi_bildirim_ogesi"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_kullanici_ad覺_bildirimOgesi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kullan覺c覺 Ad覺"
            android:textColor="@color/black"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/txt_yorum_BildirimOgesi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="5"
            android:text="Yorum" />

    </LinearLayout>

    <ImageView
        android:id="@+id/gonderi_resmi_bildirimOgesi"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        tools:src="@mipmap/ic_launcher"
        android:visibility="gone"/>

</RelativeLayout>