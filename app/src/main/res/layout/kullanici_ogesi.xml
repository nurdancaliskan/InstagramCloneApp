<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profil_resmi_Oge"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@mipmap/ic_launcher" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="5dp"
        android:layout_toEndOf="@+id/profil_resmi_Oge"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_kullaniciadi_Oge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="Kullanıcı Adı"
            android:textColor="@color/black"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/txt_ad_Oge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="Ad" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_takipEt_Oge"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:background="@drawable/button_arkaplan"
        android:text="Takip Et"
        android:textColor="@color/black"
        android:visibility="gone"/>



</RelativeLayout>